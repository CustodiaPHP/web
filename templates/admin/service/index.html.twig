{% extends 'layouts/admin.html.twig' %}

{% block page_name %}{% trans %}Services{% endtrans %}{% endblock %}

{% block maindata %}x-data="{ {% for service in services %}'delete{{ service.id }}': false,{% endfor %} }"{% endblock %}

{% block content %}
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            {% trans %}Services{% endtrans %}
        </h2>

        <a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-blue-100 bg-blue-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple"
           href="{{ path('app_admin_service_new') }}">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                <span>{% trans %}Register a new service{% endtrans %}</span>
            </div>
        </a>

        <!-- New Table -->
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                    <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                        <th class="px-4 py-3">{% trans %}ID{% endtrans %}</th>
                        <th class="px-4 py-3">{% trans %}Service{% endtrans %}</th>
                        <th class="px-4 py-3">{% trans %}URL{% endtrans %}</th>
                        <th class="px-4 py-3">{% trans %}Status{% endtrans %}</th>
                        <th class="px-4 py-3">{% trans %}Type{% endtrans %}</th>
                        <th class="px-4 py-3">{% trans %}Actions{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                    {% for service in services %}
                        <tr class="text-gray-700 dark:text-gray-400">
                            <td class="px-4 py-3 ">
                                <div class="flex items-center font-bold">
                                    {{ service.id }}
                                </div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex items-center text-sm">
                                    <div>
                                        <p class="font-semibold">{{ service.name }}</p>
                                        <p class="text-xs text-gray-600 dark:text-gray-400">
                                            {{ service.serviceGroup.name }}
                                        </p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 text-sm">
                                <a href="{{ service.url }}">{{ service.url }}</a>
                            </td>
                            <td class="px-4 py-3 text-xs">
                                {% if service.currentStatus == 1 %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-green-500 bg-green-100 rounded-full dark:bg-green-500 dark:text-green-100">
                                      {% trans %}Online{% endtrans %}
                                    </span>
                                {% elseif service.currentStatus == 2 %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-blue-500 bg-blue-100 rounded-full dark:bg-blue-500 dark:text-blue-100">
                                      {% trans %}Performance Issues{% endtrans %}
                                    </span>
                                {% elseif service.currentStatus == 3 %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-orange-500 bg-orange-100 rounded-full dark:bg-orange-500 dark:text-orange-100">
                                      {% trans %}Minor Outage{% endtrans %}
                                    </span>
                                {% elseif service.currentStatus == 4 %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-red-500 bg-red-100 rounded-full dark:bg-red-500 dark:text-red-100">
                                      {% trans %}Minor Outage{% endtrans %}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-3 text-xs">
                                {% if service.public %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-green-500 bg-green-100 rounded-full dark:bg-green-500 dark:text-green-100">
                                      {% trans %}Public{% endtrans %}
                                    </span>
                                {% else %}
                                    <span class="px-2 py-1 font-semibold leading-tight text-orange-500 bg-orange-100 rounded-full dark:bg-orange-500 dark:text-orange-100">
                                      {% trans %}Internal{% endtrans %}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex flex-col flex-wrap md:flex-row md:items-end md:space-x-2">
                                    <div>
                                        <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-blue-600 border border-transparent rounded-lg active:bg-blue-600 hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue" aria-label="Like">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                                            </svg>
                                        </a>
                                    </div>
                                    <div>
                                        <button @click="delete{{ service.id }} = !delete{{ service.id }}" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-blue-600 border border-transparent rounded-lg active:bg-red-600 hover:bg-red-700 focus:outline-none focus:shadow-outline-red" aria-label="Like">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% for service in services %}
        {% include 'admin/service/_delete_modal.html.twig' %}
    {% endfor %}
{% endblock %}