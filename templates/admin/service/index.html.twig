{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Adress</th>
                <th>Public</th>
                <th>CurrentStatus</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.name }}</td>
                <td>{{ service.type }}</td>
                <td>{{ service.adress }}</td>
                <td>{{ service.public ? 'Yes' : 'No' }}</td>
                <td>{{ service.currentStatus }}</td>
                <td>{{ service.url }}</td>
                <td>
                    <a href="{{ path('app_admin_service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_service_new') }}">Create new</a>
{% endblock %}
