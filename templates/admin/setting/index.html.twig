{% extends 'layouts/admin.html.twig' %}

{% block title %}Admin | Incidents{% endblock %}

{% block maindata %}x-data="{ {% for incident in incidents %}'delete{{ incident.id }}': false,{% endfor %} }"{% endblock %}

{% block content %}
<div class="container px-6 mx-auto grid">
    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
        Services
    </h2>
    <h1>Setting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.name }}</td>
                <td>{{ setting.value }}</td>
                <td>
                    <a href="{{ path('app_admin_setting_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('app_admin_setting_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_setting_new') }}">Create new</a>
{% endblock %}
